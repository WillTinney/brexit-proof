<br>

<div class="container-box">
  <%= link_to '#', class: 'profile-picture-inline' do %>
    <%= @assignee.profile_picture ? cl_image_tag(@assignee.profile_picture.path, transformation: [{width: 100, height: 100, gravity: "face", radius: "max", crop: "fill"}], class: "avatar-card") : image_tag('user3.png', class: "avatar-card") %>
    <p class="black-text">Change Picture</p>
    <!-- Make this uploadable with attachinary -->
  <% end %>

  <%= simple_form_for [current_user, @assignee] do |f| %>
    <div class="form-container">
      <div class="row">
        <div class="col-xs-12 col-sm-4">
          <%= f.input :first_name %>
        </div>
        <div class="col-xs-12 col-sm-4">
          <%= f.input :middle_name %>
        </div>
        <div class="col-xs-12 col-sm-4">
          <%= f.input :last_name %>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-12 col-sm-4">
          <%= f.input :citizenship %>
        </div>
        <div class="col-xs-12 col-sm-4">
          <%= f.input :date_of_birth %>
        </div>
        <div class="col-xs-12 col-sm-4">
          <%= f.input :relationship %>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-12 col-sm-4 col-sm-offset-2">
          <%= f.input :email %>
        </div>
        <div class="col-xs-12 col-sm-4">
          <%= f.input :phone_number %>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-12 col-sm-6">
          <%= f.input :address_line_1 %>
        </div>
        <div class="col-xs-12 col-sm-6">
          <%= f.input :address_line_2 %>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-12 col-sm-4">
          <%= f.input :town %>
        </div>
        <div class="col-xs-12 col-sm-4">
          <%= f.input :postcode %>
        </div>
        <div class="col-xs-12 col-sm-4">
          <%= f.input :country %>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-4 col-xs-offset-4">
          <%= f.button :submit, "Update Info" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
