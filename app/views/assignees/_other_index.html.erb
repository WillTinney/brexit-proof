<div class="container-box">
  <div class="header-box">
    <h2>Family and Friends</h2>
    <%= link_to "Add New Friend or Family Member", new_user_assignee_path(current_user, @type), remote: true, class: "btn btn-transparent btn-default button-height-default" %>
  </div>

  <div class="blue-box">
    <p>Here you add other family and friends who you think would be able to help in the case of ...</p>
  </div>

  <div class="assignees">

    <% if !@assignees.show_other_family.empty? %>
      <h3>Family Members</h3>
    <% end %>

    <div class="row">
      <% @assignees.show_other_family.each do |recipient| %>
        <div class="col-xs-12 col-md-6">
          <div class="card">
            <%= link_to user_recipient_path(current_user, recipient.id), class: 'recipient-link profile-picture-inline' do %>
              <div class="card-avatar">
                <%= recipient.profile_picture ? cl_image_tag(recipient.profile_picture.path, transformation: [{width: 100, height: 100, gravity: "face", radius: "max", crop: "fill"}], class: "avatar-card push-right") : image_tag('user3.png', class: "avatar-card") %>
              </div>
            <% end %>

            <div class="card-description">
              <%= link_to user_recipient_path(current_user, recipient.id), class: 'recipient-link card-detail' do %>
                <div class="black-text">
                  <h5><strong><%= recipient.first_name + " " + recipient.last_name %></strong></h5>
                  <h5><%= recipient.relationship %></h5>
                </div>
              <% end %>

              <div class="card-detail">
                <%= link_to "View", user_assignee_path(current_user, recipient.id), class: "btn btn-info btn-default btn-ice reference-link" %>
                <%= link_to "Delete", user_recipient_path(current_user, recipient.id), data: {confirm: 'Are you sure?'}, method: :delete, class: "btn btn-danger btn-default" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <% if !@assignees.show_friends.empty? %>
      <h3>My Friends</h3>
    <% end %>

    <div class="row">
      <% @assignees.show_friends.each do |recipient| %>
        <div class="col-xs-12 col-md-6">
          <div class="card">
            <%= link_to user_recipient_path(current_user, recipient.id), class: 'recipient-link profile-picture-inline' do %>
              <div class="card-avatar">
                <%= image_tag(recipient.profile_picture || "user.png", class: "avatar-card") %>
              </div>
            <% end %>

            <div class="card-description">
              <%= link_to user_recipient_path(current_user, recipient.id), class: 'recipient-link card-detail' do %>
                <div class="black-text">
                  <h5><strong><%= recipient.first_name + " " + recipient.last_name %></strong></h5>
                  <h5><%= recipient.relationship %></h5>
                </div>
              <% end %>

              <div class="card-detail">
                <%= link_to "View", user_assignee_path(current_user, recipient.id), class: "btn btn-info btn-default btn-ice reference-link" %>
                <%= link_to "Delete", user_recipient_path(current_user, recipient.id), data: {confirm: 'Are you sure?'}, method: :delete, class: "btn btn-danger btn-default" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
