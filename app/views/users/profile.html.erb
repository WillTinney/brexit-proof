<% content_for(:navbar) do %>
  <%= render 'shared/navbar' %>
<% end %>

<% content_for(:sidebar) do %>
  <%= render 'shared/sidebars/sidebar_core' %>
<% end %>

<div class="dashboard-box" style="background-image: linear-gradient(135deg, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0.2) 50%), url('/assets/background.jpg')">
  <div id="tab-content">
    <br><br>

    <div class="container-box profile-cards">

      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="alt-card black-links">
          <% unless @user.details_completed? %>
            <i class="fa fa-exclamation-circle warning-circle" aria-hidden="true"><span class="warning-tooltip">Details still to complete</span></i>

          <% end %>
          <h4><%= link_to "My Details", user_path(current_user), class: "details-link" %></h4>
          <hr>
          <div class="card-content card-overflow">
            <%= link_to user_path(current_user) do %>
              <p><strong><%= @user.try(:name_surname) %></strong></p>
            <% end %>

            <% if @user.citizenship %>
              <p><%= @user.citizenship + " Citizen" %></p>
            <% else %>
              <p>Please enter your citizenship</p>
            <% end %>

            <% if @user.date_of_birth %>
              <p>Date of Birth: <%= @user.date_of_birth %></p>
            <% else %>
              <p>Please enter your date of birth</p>
            <% end %>

            <p>Email: <%= @user.email %></p>

            <% if @user.phone_number != "" %>
              <p>Phone Number: <%= @user.phone_number %></p>
            <% else %>
              <p>Please enter your phone number</p>
            <% end %>

            <% if @user.address_line_1 != "" %>
              <p>Address: <%= @user.address_line_1 %><%= ", " + @user.address_line_2 if @user.address_line_2 %></p>
              <p><%= @user.try(:city) %><%= ", " + @user.postcode if @user.postcode %><%= ", " + @user.country if @user.country %></p>
            <% else %>
              <p>Please enter your address</p>
            <% end %>

            <br>
          </div>
        </div>
      </div>

      <div class="col-xs-12 col-sm-6 col-md-4">
        <% if @user.assignees.where('relationship = ?', 'Partner').last %>

          <div class="alt-card black-links">
            <% @user.assignees.where('relationship = ?', 'Partner').each do |partner| %>
              <% unless partner.details_completed? %>
              <i class="fa fa-exclamation-circle warning-circle" aria-hidden="true"><span class="warning-tooltip">Details still to complete</span></i>
            <% end %>
            <h4><%= link_to "My Partner", user_assignee_path(@user, partner) , class: "partner-link" %></h4>
            <hr>
            <div class="card-content card-overflow">
              <p><strong><%= link_to partner.name_surname, user_assignee_path(@user, partner) %></strong></p>
              <p><%= partner.phone_number %></p>
              <br>
            </div>
          <% end %>
        </div>

        <% else %>

          <div class="alt-card black-links">
            <h4><%= link_to "My Partner", "#" , class: "partner-link" %></h4>
            <hr>
            <div class="card-content card-overflow">
              <p><%= link_to "You have not assigned a partner. Click here to add a partner.", new_user_assignee_path(current_user, 'Recipient', relationship: 'Partner'), class: "proof-card" %></p>
            </div>
          </div>

        <% end %>
      </div>

      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="alt-card black-links">
          <h4><%= link_to "My Children",user_children_path(current_user), class: "children-link" %></h4>
          <hr>
          <div class="card-content card-overflow">
            <% if !@user.children.empty? %>

              <% @user.assignees.where('relationship = ?', 'Child').each do |child| %>
                <% unless child.details_completed? %>
                  <i class="fa fa-exclamation-circle warning-circle" aria-hidden="true"><span class="warning-tooltip">Details still to complete</span></i>
                <% end %>
                <p><strong><%= link_to child.try(:name_surname), user_assignee_path(@user, child) %></strong></p>
                <p><%= child.try(:phone_number) %></p>
              <% end %>

            <% else %>

              <p><%= link_to "You have not assigned any children. Click here to add a child.", new_user_assignee_path(current_user, 'Child'), class: "proof-card" %></p>

            <% end %>
          </div>
        </div>
      </div>

      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="alt-card black-links">
          <h4><%= link_to "My Guardians", user_guardians_path(current_user), class: "guardian-link" %></h4>
          <hr>
          <div class="card-content card-overflow">
            <% if !@user.guardians.empty? %>

              <% @user.guardians.each do |guardian| %>
                <% unless guardian.details_completed? %>
                  <i class="fa fa-exclamation-circle warning-circle" aria-hidden="true"><span class="warning-tooltip">Details still to complete</span></i>
                <% end %>
                <p><strong><%= link_to guardian.name_surname, user_assignee_path(@user, guardian) %></strong></p>
                <p><%= guardian.try(:phone_number) %></p>
              <% end %>

            <% else %>

              <p><%= link_to "You have not assigned any guardians. Click here to add a guardian.", new_user_assignee_path(current_user, 'Guardian'), class: "proof-card" %></p>

            <% end %>
          </div>
        </div>
      </div>

      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="alt-card black-links">
          <% if @user.proofs.empty? %>
            <i class="fa fa-exclamation-circle warning-circle" aria-hidden="true"><span class="warning-tooltip">No proof of residency</span></i>
          <% end %>
          <h4><%= link_to "Proof of Residency", user_proofs_path(current_user) %></h4>
          <hr>
          <div class="card-content card-overflow">
            <% if !@user.proofs.empty? %>

              <% @user.proofs.each do |proof| %>
                <p>- <%= proof.title %></strong></p>
              <% end %>

            <% else %>

              <p><%= link_to "You have not uploaded any proof of residency. Click here to go to our secure upload form.", user_proofs_path(current_user), class: "proof-card" %></p>

            <% end %>
          </div>
        </div>
      </div>

      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="alt-card black-links">
          <h4><%= link_to "Notes", user_notes_path(current_user) %></h4>
          <hr>
          <div class="card-content card-overflow">
            <% if !@user.notes.empty? %>

              <% @user.notes.reverse.each do |note| %>
                <p><%= note.title %></strong></p>
              <% end %>

            <% else %>

              <p><%= link_to "You have not created any notes. Click here to go to open your notes library.", user_notes_path(current_user), class: "proof-card" %></p>

            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
