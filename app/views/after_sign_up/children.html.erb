<% content_for(:navbar) do %>
  <%= render 'shared/navbars/navbar_sign_up' %>
<% end %>

<div class="navbar-box">
  <div class="container">
    <h3>Your Children</h3>

    <p>Please enter some basic details about your children.</p>
  </div>
</div>

<div class="progress-width">
  <div class="row bs-wizard" style="border-bottom:0;">
    <div class="col-xs-3 bs-wizard-step complete">
      <div class="text-center bs-wizard-stepnum">You</div>
      <div class="progress"><div class="progress-bar"></div></div>
      <a href="#" class="bs-wizard-dot"></a>
    </div>

    <div class="col-xs-3 bs-wizard-step complete"><!-- complete -->
      <div class="text-center bs-wizard-stepnum">Partner</div>
      <div class="progress"><div class="progress-bar"></div></div>
      <a href="#" class="bs-wizard-dot"></a>
    </div>

    <div class="col-xs-3 bs-wizard-step active"><!-- complete -->
      <div class="text-center bs-wizard-stepnum">Children</div>
      <div class="progress"><div class="progress-bar"></div></div>
      <a href="#" class="bs-wizard-dot"></a>
    </div>

    <div class="col-xs-3 bs-wizard-step disabled"><!-- active -->
      <div class="text-center bs-wizard-stepnum">Guardians</div>
      <div class="progress"><div class="progress-bar"></div></div>
      <a href="#" class="bs-wizard-dot"></a>
    </div>
  </div>
</div>

<div class="wizard-box text-center">
  <p class="sign-up-title top-margin">How many children do you have?</p>
  <%= simple_form_for(@user, url: wizard_path, method: :put, class: "sign-up-form") do |f| %>
    <div class="row wizard-buttons">
      <div class="col-xs-12">
        <%= f.submit "0", class: "purple-button" %>
        <%= f.submit "1", class: "purple-button" %>
        <%= f.submit "2", class: "purple-button" %>
        <%= f.submit "3", class: "purple-button" %>
        <%= f.submit "4", class: "purple-button" %>
        <%= f.submit "5", class: "purple-button" %>
      </div>
    </div>
  <% end %>
</div>
