<% content_for(:navbar) do %>
  <%= render 'shared/navbars/navbar_sign_up' %>
<% end %>

<div class="navbar-box">
  <div class="container">
    <h3>Please enter some basic details about yourself.</h3>

    <p>This is important so we are able to identify you and set up your account.</p>
  </div>
</div>

<div class="progress-width">
  <div class="row bs-wizard" style="border-bottom:0;">
    <div class="col-xs-3 bs-wizard-step active">
      <div class="text-center bs-wizard-stepnum">You</div>
      <div class="progress"><div class="progress-bar"></div></div>
      <a href="#" class="bs-wizard-dot"></a>
    </div>

    <div class="col-xs-3 bs-wizard-step disabled"><!-- complete -->
      <div class="text-center bs-wizard-stepnum">Partner</div>
      <div class="progress"><div class="progress-bar"></div></div>
      <a href="#" class="bs-wizard-dot"></a>
    </div>

    <div class="col-xs-3 bs-wizard-step disabled"><!-- complete -->
      <div class="text-center bs-wizard-stepnum">Children</div>
      <div class="progress"><div class="progress-bar"></div></div>
      <a href="#" class="bs-wizard-dot"></a>
    </div>

    <div class="col-xs-3 bs-wizard-step disabled"><!-- active -->
      <div class="text-center bs-wizard-stepnum">Guardians</div>
      <div class="progress"><div class="progress-bar"></div></div>
      <a href="#" class="bs-wizard-dot"></a>
    </div>
  </div>
</div>

<div class="wizard-box text-center">
  <%= simple_form_for(@user, url: wizard_path, method: :put, class: "sign-up-form") do |f| %>

    <p class="sign-up-title">What is your full name?</p>

    <div class="row name-input">
      <div class="col-xs-2 col-xs-offset-2 col-sm-2 col-sm-offset-0">
        <%= f.input :title, placeholder: 'Mr', label: false, collection: ["Mr", "Mrs", "Ms"], checked: ["Mr"]  %>
      </div>
      <div class="col-xs-6 col-sm-3 col-sm-offset-0">
        <%= f.input :first_name, placeholder: 'First name', label: false %>
      </div>
      <div class="col-xs-6 col-xs-offset-4 col-sm-3 col-sm-offset-0">
        <%= f.input :middle_name, label: "Middle name(s)", placeholder: 'Middle name', label: false %>
      </div>
      <div class="col-xs-6 col-xs-offset-4 col-sm-3 col-sm-offset-0">
        <%= f.input :last_name, placeholder: 'Last name', label: false %>
      </div>
    </div>

    <br>

    <div class="row">
      <div class="col-xs-8 col-xs-offset-2 col-sm-4 col-sm-offset-2">
        <%= f.input :citizenship, placeholder: 'Citizenship', label: 'Where are you from?', as: :country %>
      </div>
      <div class="col-xs-8 col-xs-offset-2 col-sm-4 col-sm-offset-0">
        <%= f.input :date_of_birth, placeholder: 'Date of birth', label: 'When were you born?',, as: :string, input_html: {type: :date} %>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-4 col-xs-offset-4">
        <div class="wizard-buttons">
          <%= f.submit 'Next', class: 'btn btn-success' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
