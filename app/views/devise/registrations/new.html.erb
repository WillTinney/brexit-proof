<% content_for(:navbar) do %>
  <%= render 'shared/navbars/navbar_sign_up' %>
<% end %>

<div class="navbar-box">
  <div class="container">
    <h3>Welcome to BrexitProof. Let's get started.</h3>

    <p>First off you need to sign-up with your email address and set a password.</p>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <br>
      <br>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <div class="row">
            <div class="col-xs-3">
              <%= f.input :title, required: true, autofocus: true, collection: ["Mr", "Mrs", "Ms"] %>
            </div>

            <div class="col-xs-9">
              <%= f.input :email, required: true, autofocus: true, placeholder: "example@gmail.com" %>
            </div>
          </div>

          <div class="row">
            <div class="col-xs-6">
              <%= f.input :first_name, required: true, autofocus: true, placeholder: "First name" %>
            </div>

            <div class="col-xs-6">
              <%= f.input :last_name, required: true, autofocus: true, placeholder: "Last name" %>
            </div>
          </div>

          <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), placeholder: "********" %>
          <%= f.input :password_confirmation, required: true, placeholder: "********" %>
        </div>

        <div class="form-actions text-center">
          <%= f.button :submit, "Sign up", class: 'purple-button' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
