<!-- Banner  -->
<div class="home-banner">
  <div id="slideshow">
    <%= image_tag('banner1.jpg', class: "home-banner-image", id: "banner1") %>
    <%= image_tag('banner2.jpg', class: "home-banner-image", id: "banner2") %>
    <%= image_tag('banner3.jpg', class: "home-banner-image", id: "banner3") %>
  </div>

