<%= content_for(:after_js) do %>
  <script>
    // Navbar colour change on scroll
    $(document).ready(function(){
      $(window).scroll(function(){
        if($(window).scrollTop()>200)
          $(".navbar-wagon").css({"background-color": "#6B648A", "box-shadow": "0 1px 5px 0 rgba(0,0,0,0.07),0 1px 0 0 rgba(0,0,0,0.03)"});
        else
          $(".navbar-wagon").css({"background-color": "rgba(255, 255, 255, 0.2)", "box-shadow": "none"});
      });
    });
    // Banner image cycler
    $("#banner2").hide();
    $('#banner3').hide();

    setInterval(function() {
      $('#slideshow > img:first')
        .fadeOut(2000)
        .next()
        .fadeIn(2000)
        .end()
        .appendTo('#slideshow');
    }, 6000);

    // // Sign-up Modal
    // $('#modal-button').on('click', function(e) {
    //   e.preventDefault();
    //   $('#user_mobile_number').val(prefix + ' ' + mobile);
    // });

    // Home arrow scroll
    $('#home-arrow').click(function(e){
      e.preventDefault();
      $('html, body').animate({scrollTop : 750},800);
      return false;
    });

    //// Footer Scrolls
    // Home
    $('#footer-home').click(function(e){
      e.preventDefault();
      $('html, body').animate({scrollTop : 0},1000);
      return false;
    });
    // How
    $("#footer-how").click(function() {
      $('html, body').animate({
        scrollTop: $("#instructions").offset().top
      }, 1500);
    });
    // Pricing
    $("#footer-price").click(function() {
      $('html, body').animate({
        scrollTop: $("#comparison").offset().top
      }, 1500);
    });
  </script>
<% end %>
